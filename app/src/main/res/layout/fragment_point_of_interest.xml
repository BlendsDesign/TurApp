<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ShowPointOfInterest.PointOfInterestFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



                <TextView
                    android:id="@+id/tvPoiName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/heading_textSize"
                    />
                <TextView
                    android:id="@+id/tvPoiDate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvPoiName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/tvPoiLength"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvPoiDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
        <TextView
            android:id="@+id/tvTotalPoiWithRecordingsSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvPoiLength"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecordings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTotalPoiWithRecordingsSize"
            app:layout_constraintBottom_toTopOf="@+id/btDelete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


        <Button
            android:id="@+id/btDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/theme_blue"
            android:textColor="@color/white"
            android:text="DELETE POI"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- This is what shows the recording data on top of the other data -->
        <LinearLayout
            android:id="@+id/showRecordingView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btDelete"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:background="@color/transparent_theme_blue"
            android:visibility="gone">
            <Button
                android:id="@+id/btCloseRecordingView"
                android:text="Close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/theme_blue"/>
            <ScrollView
                android:id="@+id/svRecording"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvRecording"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/theme_orange"/>
            </ScrollView>
        </LinearLayout>

        <ImageView
            android:id="@+id/status_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Deleting in progress image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/loading_animation"
            android:visibility="gone"
            android:background="@color/black"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>