<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        tools:context=".fragments.TrackingFragment">

        <org.osmdroid.views.MapView
            android:id="@+id/trackingMap"
            style="@style/style_mapview"
            app:flow_horizontalBias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/svTrackingFragment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="2"
            tools:layout_editor_absoluteX="47dp">


        </org.osmdroid.views.MapView>

        <ScrollView
            android:id="@+id/svTrackingFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:flow_horizontalBias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavTrackingFragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trackingMap"
            app:layout_constraintVertical_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFirstTextViewInTracking"
                    style="@style/style_title_text"
                    android:text="@string/current_location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Step Count:"
                    android:layout_marginTop="20dp"
                    style="@style/style_title_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvStepCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="0"
                    android:textSize="18sp" />


            </LinearLayout>

        </ScrollView>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavTrackingFragment"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/map_fragment_bottom_nav" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>