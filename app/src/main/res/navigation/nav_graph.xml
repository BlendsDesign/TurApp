<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.turapp.startPage.StartFragment"
        android:label="start_fragment"
        tools:layout="@layout/start_fragment" >
        <action
            android:id="@+id/action_startFragment_to_liveSensorDataFragment"
            app:destination="@id/liveSensorDataFragment" />
        <action
            android:id="@+id/action_startFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
        <action
            android:id="@+id/action_startFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
        <action
            android:id="@+id/action_startFragment_to_pointOfInterestFragment"
            app:destination="@id/pointOfInterestFragment" />
    </fragment>
    <fragment
        android:id="@+id/liveSensorDataFragment"
        android:name="com.example.turapp.seeLiveSensorData.LiveSensorDataFragment"
        android:label="fragment_live_sensor_data"
        tools:layout="@layout/fragment_live_sensor_data" />
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.turapp.mapView.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" >
    </fragment>
    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.example.turapp.cameraView.CameraFragment"
        android:label="fragment_camera"
        tools:layout="@layout/fragment_camera" />
    <fragment
        android:id="@+id/pointOfInterestFragment"
        android:name="com.example.turapp.ShowPointOfInterest.PointOfInterestFragment"
        android:label="fragment_point_of_interest"
        tools:layout="@layout/fragment_point_of_interest" >
        <argument
            android:name="poiId"
            app:argType="integer" />
        <action
            android:id="@+id/action_pointOfInterestFragment_to_startFragment"
            app:destination="@id/startFragment"
            app:popUpTo="@id/startFragment"
            app:popUpToInclusive="true" />
    </fragment>


</navigation>